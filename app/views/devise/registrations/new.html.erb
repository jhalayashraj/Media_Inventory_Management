<div class="card card-register mx-auto mt-5">
  <div class="card-header">Register an Account</div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-row">
        <div class="col-md-6">
          <%= f.input :name, placeholder: 'Enter name' %>
        </div>
        <div class="col-md-6">
          <%= f.input :phone_number, placeholder: 'Enter phone number' %>
        </div>
      </div>
      <%= f.input :email, placeholder: 'Enter email' %>
      <div class="form-row">
        <div class="col-md-6">
          <%= f.input :password, placeholder: 'Password', input_html: { minlength: 6 } %>
        </div>
        <div class="col-md-6">
          <%= f.input :password_confirmation, placeholder: 'Confirm password' %>
        </div>
      </div>
      <%= f.submit "Register", class: 'btn btn-primary btn-block' %>
    <% end %>
    <div class="text-center">
      <%= link_to "Login Page", new_session_path(resource_name), class: 'd-block small mt-3' %>
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'd-block small' %>
    </div>
  </div>
</div>
