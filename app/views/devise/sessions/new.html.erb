<div class="card card-login mx-auto mt-5">
  <div class="card-header">Login</div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter email' %>
      </div>
      <div class="form-group">
        <%= f.label :password %><br>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
      </div>
      <div class="form-group">
        <% if devise_mapping.rememberable? -%>
          <div class="form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
          </div>
        <% end %>
      </div>
      <%= f.submit "Login", class: 'btn btn-primary btn-block' %>
    <% end %>
    <div class="text-center">
      <%= link_to "Register an Account", new_registration_path(resource_name), class: 'd-block small mt-3' %>
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'd-block small' %>
    </div>
  </div>
</div>
