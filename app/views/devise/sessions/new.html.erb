<div class="card card-login mx-auto mt-5">
  <div class="card-header">Login</div>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, placeholder: 'Enter email' %>
        <%= f.input :password, placeholder: 'Password' %>
        <% if devise_mapping.rememberable? -%>
          <%= f.input :remember_me, as: :boolean %>
        <% end %>
        <%= f.submit 'Login', class: 'btn btn-primary btn-block' %>
    <% end %>
    <div class="text-center">
      <%= link_to "Register an Account", new_registration_path(resource_name), class: 'd-block small mt-3' %>
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: 'd-block small' %>
    </div>
  </div>
</div>
